datasource db {
  provider = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Post {
  id              Int         @id @default(autoincrement())
  slug            String      @unique
  title           String
  published       Boolean     @default(true)
  content         String?
  metaDescription String?
  featuredBanner  String?
  status          PostStatus  @default(DRAFT)
  scheduledAt     DateTime?
  publishedAt     DateTime?
  statusChangedAt DateTime    @default(now())
  statusChangedBy String?
  createdAt       DateTime    @default(now())
  updatedAt       DateTime    @updatedAt
}

enum PostStatus {
  DRAFT
  SCHEDULED
  PUBLISHED
}

model Experience {
  id               Int       @id @default(autoincrement())
  company          String
  title            String
  period           String?
  location         String?
  startDate        DateTime
  endDate          DateTime?
  description      String?
  achievements     String[]  @default([])
  fullDescription  String?
  responsibilities String[]  @default([])
  skills           String[]  @default([])
  careerProgression Json?
  previousRole     Json?
  roles            Json?     // Array of roles within same company
  published        Boolean   @default(true)
  createdAt        DateTime  @default(now())
  updatedAt        DateTime  @updatedAt
}

model WorkSample {
  id          Int      @id @default(autoincrement())
  title       String
  url         String?
  description String?
  published   Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model WebApp {
  id          Int      @id @default(autoincrement())
  name        String
  url         String?
  description String?
  image       String?  // Image URL for showcase
  blogPostSlug String? // Reference to blog post about this app
  published   Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model SiteSettings {
  id                  Int      @id @default(autoincrement())
  brandName           String?
  brandRole           String?
  brandDescription    String?
  copyright           String?
  footerTagline       String?
  footerNote          String?
  footerCtaLabel      String?
  footerCtaHref       String?
  linkedin            String?
  github              String?
  x                   String?
  threads             String?
  email               String?
  contactHeadline     String?
  contactDescription  String?
  contactLocation     String?
  contactAvailability String?
  contactCtaLabel     String?
  contactCtaHref      String?
  createdAt           DateTime @default(now())
  updatedAt           DateTime @updatedAt
}

model Tool {
  id          Int      @id @default(autoincrement())
  name        String
  url         String
  description String?
  image       String?  // Image URL for showcase
  blogPostSlug String? // Reference to blog post about this tool
  published   Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Skill {
  id          Int      @id @default(autoincrement())
  name        String
  slug        String   @unique
  description String?
  icon        String?
  level       Int      @default(1)
  category    String?
  published   Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

enum PromoPlacement {
  TOP_BAR
  BOTTOM_BAR
  PRE_FOOTER_CARD
}

model PromoSection {
  id           Int             @id @default(autoincrement())
  title        String?
  description  String?
  linkLabel    String?
  linkHref     String?
  placement    PromoPlacement  @default(PRE_FOOTER_CARD)
  isEnabled    Boolean         @default(true)
  displayOrder Int             @default(0)
  createdAt    DateTime        @default(now())
  updatedAt    DateTime        @updatedAt
}

model Audit {
  id         Int      @id @default(autoincrement())
  actorEmail String
  entityType String
  entityId   String
  action     String
  diff       Json
  createdAt  DateTime @default(now())
}
